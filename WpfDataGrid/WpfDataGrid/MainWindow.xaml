<Window x:Class="WpfSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="#FF00FFFA" Offset="1"/>
                <GradientStop Color="White"/>
            </LinearGradientBrush>
        </Grid.Background>
        <ComboBox x:Name="cmbBoxListe" HorizontalAlignment="Left" Margin="334,55,0,0" VerticalAlignment="Top" Width="120" Height="50" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem>Item 1</ComboBoxItem>
            <ComboBoxItem>Item 2</ComboBoxItem>
            <ComboBoxItem>Item 3</ComboBoxItem>
            <Button Name="btntikla" Width="100" Height="50" Content="Tıkla" Click="btntikla_Click" Background="#FF004CFF" FontWeight="Bold" FontSize="22" FontFamily="{DynamicResource {x:Static SystemFonts.MessageFontFamilyKey}}" />
        </ComboBox>
        <Label x:Name="label" Content="Ad" HorizontalAlignment="Left" Margin="27,55,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Soyad" HorizontalAlignment="Left" Margin="27,96,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.526,1.368"/>
        <TextBox Text="{Binding ElementName=tb1,Path=SelectedItem.AD}" HorizontalAlignment="Left" Height="23" Margin="132,55,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox Text="{Binding ElementName=tb1,Path=SelectedItem.SOYAD}" HorizontalAlignment="Left" Height="23" Margin="132,96,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnAdd" Content="Kişiyi Ekle" HorizontalAlignment="Left" Margin="177,134,0,0" VerticalAlignment="Top" Width="75" Click="btnAdd_Click"/>
        <DataGrid Name="tb1" Grid.Column="0" AutoGenerateColumns="False" HorizontalAlignment="Left" Margin="27,177,0,0" VerticalAlignment="Top" Height="124" Width="225">
            <DataGrid.Columns>
                <DataGridTextColumn Header="AD" Width="*" Binding="{Binding AD}"/>
                <DataGridTextColumn Header="SOYAD" Width="*" Binding="{Binding SOYAD}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
